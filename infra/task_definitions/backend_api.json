{
  "containerDefinitions": [
    {
      "name": "api",
      "image": "$IMAGE_URI",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "entryPoint": [],
      "command": [
        "rails",
        "s",
        "-b",
        "0.0.0.0"
      ],
      "environment": [
        {
          "name": "RAILS_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "$SECRETS_MANAGER_ARN:DATABASE_URL::"
        },
        {
          "name": "SECRET_KEY_BASE",
          "valueFrom": "$SECRETS_MANAGER_ARN:SECRET_KEY_BASE::"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${APP_NAME}-${DEPLOY_ENV}-backend",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "${APP_NAME}-${DEPLOY_ENV}-backend"
        }
      }
    }
  ],
  "family": "${APP_NAME}-${DEPLOY_ENV}-backend-api",
  "taskRoleArn": "$TASK_ROLE_ARN",
  "executionRoleArn": "$TASK_EXECUTION_ROLE_ARN",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX"
  },
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}
